{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
"include": [
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  "**/*.js", // Add this to ensure .js files are included
  "**/*.jsx", // Add this to ensure .jsx files are included
  ".next/types/**/*.ts",
  "src/app/api/submit/route.js",
  "src/lib/mongodb.js",
  "src/lib/mailgun.js",
  "src/app/api/sending"
],
  "exclude": ["node_modules"]
}
